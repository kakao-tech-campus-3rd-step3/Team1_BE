{
  "family": "boost-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "EC2"
  ],
  "cpu": "1024",
  "executionRoleArn": "arn:aws:iam::876253814177:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::876253814177:role/ecsTaskRoleS3",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "876253814177.dkr.ecr.ap-northeast-2.amazonaws.com/boost-ecr:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/boost-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "JAVA_TOOL_OPTIONS",
          "value": "-XX:MaxRAMPercentage=70 -XX:+UseSerialGC -XX:+ExitOnOutOfMemoryError -Dspring.profiles.active=prod"
        }
      ],
      "secrets": [
        {
          "name": "RDS_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:RDS_URL::"
        },
        {
          "name": "RDS_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:RDS_USERNAME::"
        },
        {
          "name": "RDS_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:RDS_PASSWORD::"
        },
        {
          "name": "JWT_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:JWT_SECRET_KEY::"
        },
        {
          "name": "KAKAO_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:KAKAO_CLIENT_ID::"
        },
        {
          "name": "KAKAO_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:KAKAO_CLIENT_SECRET::"
        },
        {
          "name": "ALLOWED_REDIRECT_URIS",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:ALLOWED_REDIRECT_URIS::"
        },
        {
          "name": "AWS_REGION",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:AWS_REGION::"
        },
        {
          "name": "AWS_S3_BUCKET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:AWS_S3_BUCKET::"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:OPENAI_API_KEY::"
        },
        {
          "name": "VAPID_PUBLIC_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:VAPID_PUBLIC_KEY::"
        },
        {
          "name": "VAPID_PRIVATE_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:VAPID_PRIVATE_KEY::"
        },
        {
          "name": "LLM_PROMPT",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:876253814177:secret:boost-secrets-Zbelb3:LLM_PROMPT::"
        }
      ],
      "memoryReservation": 512,
      "memory": 768,
      "stopTimeout": 10
    }
  ]
}
